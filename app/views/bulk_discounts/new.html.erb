<h2>New Bulk Discount</h2>
<%= form_with model: [:merchant, @bulk_discount], url: merchant_bulk_discounts_path(@merchant), local: true do |form| %>
  <%= form.label :discount %>
  <%= form.number_field :discount %>
  <%= form.label :threshold %>
  <%= form.number_field :threshold %>
  <%= form.submit "Submit" %>
<% end %>